{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["components/*"],
      "~/*": ["node_modules/*"],
    },
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.d.ts",
    "components/**/*.tsx",
    "components/**/*.vue"
  ]
}
